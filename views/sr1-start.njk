            </svg>
          </div>

          <div class="moj-alert__content govuk-body">
            <h2 class="govuk-heading-m">{{ t('sr1-start:alert.heading') }}</h2>
            <br>
            <p>{{ t('sr1-start:alert.line1') | safe }}</p>
            <p>{{ t('sr1-start:alert.line2') }}</p>
          </div>
          <div class="moj-alert__action">
            <button class="moj-alert__dismiss" hidden>Dismiss</button>
          </div>
        </div>

    <h1 class="govuk-heading-l">{{ t('sr1-start:h1') }} </h1>
    <div class="govuk-inset-text">
        {{ t('sr1-start:insetText', { url: 'https://send-an-sr1-medical-evidence-form.dwp.gov.uk/start' }) | safe  }}
    </div>
    <div class="form-group">
      <p>{{ t('sr1-start:p1') }}</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>{{ t('sr1-start:li1') }}</li>
        <li>{{ t('sr1-start:li2') }}</li>
      </ul>
    </div>

      {{ govukButton({
        text: t('sr1-start:startNow'),
        isStartButton: true
      }) }}
{% endblock %}
