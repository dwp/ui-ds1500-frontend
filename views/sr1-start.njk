{% extends "layouts/app-journey.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% block casaPageTitle %}
  {{ t('sr1-start:pageTitle') }}
{% endblock %}

{% set notificationHtml %}
  <p class="govuk-notification-banner__heading">
    {{ t('sr1-start:notificationText', { url: 'https://www.gov.uk/government/news/thousands-of-people-in-their-final-year-of-life-to-have-their-disability-benefits-fast-tracked' }) | safe }}
  </p>
{% endset %}

{% block journey_form %}
    <div role="region" class="moj-alert moj-alert--warning" aria-label="warning: Some information could not be imported" data-module="moj-alert">
          <div>
            <svg class="moj-alert__icon" role="presentation" focusable="false" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30" height="30" width="30">
